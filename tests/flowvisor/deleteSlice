#!/usr/bin/env bash
# One argument expected:
#    1: Name of the slice

unset ERR
if [[ -n "$1" ]]; then
    SLICE_NAME=$1
else
    echo "Must specify first parameter (Name of the slice)"
    ERR=1
fi

if [[ -z "$ERR" ]]; then
    #curl http://$RYU_API_HOST:$RYU_API_PORT/v1.0/flowvisor/"$SLICE_NAME"_"$CTRL_IP_ADDR"_"$CTRL_PORT_NUM" -X POST
    fvctl -h 127.0.0.1 -p 8085 -f /etc/flowvisor/passFile remove-slice $SLICE_NAME
fi
